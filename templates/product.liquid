<div id="main" class="sixteen columns">
  <div id="product_wrapper">
  <div id="sidebar" class="two columns alpha">
    <div class="title">
      collections
    </div>
    <ul id="collections">
      {% for link in linklists.collections.links %}
          <li><a href="{{link.url}}" class="grey_link {% if link.active %} active {% endif %}" title="{{link.title}}">{{link.title}}</a></li>
      {% endfor %}
    </ul>
  </div>
  <div id="product_top_info" class="fourteen columns omega">
    <div id="product_main_image">
      <a href="{{ product.featured_image | product_img_url: "grande" }}" rel="position: 'inside'" class="cloud-zoom"><img id="main_image" src="{{ product.featured_image | product_img_url: 'large' }}" alt="{{product.title | escape }}" height="345" width="345"></a>
    </div>
    <div id="product_details">
      <div class="add_to_cart">
        <div class="product_title"><h3>{{ product.title }}</h3></div>
          <div class="product_information grey_text">
            {{product.description}}
    			</div>
        <!-- <div class="product_price">{{ product.price_min | money }}{% if product.price_varies %} - {{ product.price_max | money }}{% endif %}</div> -->
        <div class="bold cyan_text style_options">choose your style options</div>
        <form id="options_form" method="post" action="/cart/add">
          <select name="id" id="product_select">
            {% for variant in product.variants %}
              {% if variant.available %}
              <option name="id" value="{{ variant.id }}">{{ variant.price | money }} - {{ variant.title }}</option>
            {% else %}
              <option name="id" disabled="disabled" value="{{ variant.id }}">{{ variant.price | money }} - {{ variant.title }}</option>
              {% endif %}
            {% endfor %}            
          </select>
          <div id="product_actions">
            <input type="submit" value="Add to Cart" class="add_cart_button">
            <a href="{{collection.url}}" class="white_link">Continue browsing this Collection &gt;</a>            
          </div>
        </form>
      </div><!-- add_to_cart -->
    </div><!-- product_top_info -->
    <div id="product_bottom" class="sixteen columns clearfix">
      <div id="product_thumbnails">
        {% for image in product.images %}
          <div class="thumbnail_wrapper">
            <a href="{{ image | product_img_url: "grande" }}" rel="colorbox"><img src="{{ image | product_img_url: "compact" }}" alt="{{ product.title | escape }}" /></a>
          </div>
        {% endfor %}
      </div>
      <div id="product_tags">
        
      </div>
    </div>
  </div><!-- product_wrapper -->
</div><!-- main -->




